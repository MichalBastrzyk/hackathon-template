{
  "servers": {
    "shadcn": {
      "command": "bunx",
      "args": ["shadcn@latest", "mcp"],
      "type": "stdio"
    },
    "ai-elements": {
      "command": "bunx",
      "args": ["-y", "mcp-remote", "https://registry.ai-sdk.dev/api/mcp"],
      "type": "stdio"
    },
    "io.github.upstash/context7": {
      "type": "stdio",
      "command": "bunx",
      "args": ["@upstash/context7-mcp@1.0.31"],
      "env": {
        "CONTEXT7_API_KEY": "${input:CONTEXT7_API_KEY}"
      }
    }
  },
  "inputs": [
    {
      "id": "CONTEXT7_API_KEY",
      "type": "promptString",
      "description": "API key for authentication",
      "password": true
    }
  ]
}
